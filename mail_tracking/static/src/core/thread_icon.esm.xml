<templates xml:space="preserve">
 <t t-inherit="mail.ThreadIcon" t-inherit-mode="extension">
        <xpath expr="//div[@title='History']" position="after">
            <div
                t-elif="props.thread.id === 'failed'"
                class="fa fa-fw fa-ban"
                title="Failed"
            />
        </xpath>
    </t>
</templates>
